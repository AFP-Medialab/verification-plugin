{
  "manifest_version": 2,
  "name" :"Fake news debunker by InVID & WeVerify",
  "version" :"0.74",
  "description" :"InVID WeVerify extension",
  "short_name": "Verification Plugin",
  "browser_action": {
    "default_title": "InVID WeVerify",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "options_page": "",
  "permissions": ["activeTab", "contextMenus", "https://mever.iti.gr/*", 
    "https://weverify-assistant.gate.ac.uk/*","https://weverify-tsna.gate.ac.uk/*", 
    "*://weverify-demo-similarity.ontotext.com/*", "*://weverify-demo-search.ontotext.com/*", "*://weverify-demo.ontotext.com/*", 
    "http://multimedia2.iti.gr/video_analysis/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com https://*.google.com ; object-src 'self'",
  "web_accessible_resources": ["/popup.html"]
}
